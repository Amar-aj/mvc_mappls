@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        margin: 0
    }

    #map {
        width: 100%;
        height: 100vh;
        margin: 0;
        padding: 0;
    }
</style>


<script src="https://apis.mapmyindia.com/advancedmaps/v1/<Key>/map_load?v=1.3"></script>
<script src="https://apis.mapmyindia.com/advancedmaps/api/<Key>/map_sdk_plugins"></script>


<div id="map"></div>
<script>
    /*Map Initialization*/
    var map = new MapmyIndia.Map('map', { center: [20.296059, 85.824539], zoom: 50, search: true });

    /*Place Picker plugin initialization*/
    var options = {
        map: map,
        callback: callback_method,

        location: { lat: 28.8787, lng: 77.08888 },//to open that location on map on initailization
        closeBtn: true,
        closeBtn_callback: closeBtn_callback,
        search: true,
        topText: 'Location Search',
        pinImage: 'pin.png', //custom pin image
        pinHeight: 40

    };
    var picker = new MapmyIndia.placePicker(options);
    function callback_method(data) {
        console.log(data); alert(JSON.stringify(data));
    }
